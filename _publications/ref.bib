@article{xu_association_2016,
	title = {Association {Between} {Variants} in {Arsenic} (+3 {Oxidation} {State}) {Methyltranserase} ({AS3MT}) and {Urinary} {Metabolites} of {Inorganic} {Arsenic}: {Role} of {Exposure} {Level}},
