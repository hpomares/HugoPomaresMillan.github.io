@article{chiou_incidence_2001,
	title = {Incidence of {Transitional} {Cell} {Carcinoma} and {Arsenic} in {Drinking} {Water}: {A} {Follow}-up {Study} of 8,102 {Residents} in an {Arseniasis}-endemic {Area} in {Northeastern} {Taiwan}},
