@article{epner_understanding_2022,
	title = {Understanding the {Link} between {Sugar} and {Cancer}: {An} {Examination} of the {Preclinical} and {Clinical} {Evidence}},
	volume = {14},
	issn = {2072-6694},
	shorttitle = {Understanding the {Link} between {Sugar} and {Cancer}},
