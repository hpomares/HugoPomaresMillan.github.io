	journal = {American Journal of Epidemiology},
	author = {Chiou, Hung-Yi and Chiou, Shu-Ti and Hsu, Yi-Hsiang and Chou, Yi-Li and Tseng, Chin-Hsiao and Wei, Min-Li and Chen, Chien-Jen},
